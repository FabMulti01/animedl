{
    "name": "animedl",
    "productName": "AnimeDL",
    "version": "1.4.2",
    "private": true,
    "description": "Motore di ricerca per anime italiani e torrent multilingua",
    "main": "dist/main.js",
    "scripts": {
        "start": "vite",
        "build:dev": "tsc && vite build && electron-builder --publish never",
        "build:publish": "tsc && vite build && electron-builder --publish always"
    },
    "author": "FabMulti01",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/FabMulti01/animedl/issues"
    },
    "repository": "https://github.com/FabMulti01/animedl",
    "build": {
        "files": [
            "dist/main.js",
            "dist/index.html",
            "dist/assets/*"
        ],
        "appId": "com.eps.animedl",
        "compression": "maximum",
        "nsis": {
            "oneClick": false,
            "perMachine": true,
            "allowElevation": true,
            "allowToChangeInstallationDirectory": true,
            "deleteAppDataOnUninstall": false,
            "createDesktopShortcut": "always",
            "shortcutName": "AnimeDL"
        }
    },
    "devDependencies": {
        "@types/cheerio": "^0.22.31",
        "@types/react": "^18.0.33",
        "@vitejs/plugin-react": "^4.0.0",
        "electron": "^24.0.0",
        "electron-builder": "^23.6.0",
        "typescript": "^5.0.2",
        "vite": "^4.2.0",
        "vite-electron-plugin": "^0.8.2",
        "vite-plugin-electron-renderer": "^0.14.2",
        "vite-tsconfig-paths": "^4.0.8"
    },
    "dependencies": {
        "@emotion/react": "^11.10.6",
        "@mantine/core": "^6.0.6",
        "@mantine/form": "^6.0.6",
        "@mantine/hooks": "^6.0.6",
        "@mantine/notifications": "^6.0.6",
        "@mantine/nprogress": "^6.0.6",
        "cheerio": "^1.0.0-rc.12",
        "classnames": "^2.3.2",
        "electron-store": "^8.1.0",
        "electron-updater": "^5.3.0",
        "filenamify": "^6.0.0",
        "markdown-it": "^13.0.1",
        "mobx": "^6.9.0",
        "mobx-react": "^7.6.0",
        "node-downloader-helper": "^2.1.6",
        "react": "^18.2.0",
        "react-icons": "^4.8.0",
        "react-promise-suspense": "^0.3.4",
        "react-router-dom": "^6.9.0"
    }
}

{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "skipLibCheck": true,
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "verbatimModuleSyntax": true,
        "moduleDetection": "force",
        "noEmit": true,
        "jsx": "react-jsx",
        "baseUrl": "./",
        "paths": {
            "@components/*": ["src/components/*"],
            "@classes/*": ["src/classes/*"],
            "@interfaces/*": ["src/interfaces/*"],
            "@functions/*": ["src/functions/*"],
            "@stores/*": ["src/stores/*"]
        }
    },
    "exclude": ["./node_modules/*"]
}
